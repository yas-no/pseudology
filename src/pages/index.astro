---
// データ取得関数をインポート
import { fetchReviews, fetchAboutData } from '../lib/data_fetcher';
import App from '../components/App.jsx';

// スプレッドシートからレビューデータを取得
const allReviews = await fetchReviews();

// GoogleドキュメントからAboutデータを取得
const aboutData = await fetchAboutData();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Pseudology</title>
  </head>
  <body class="bg-[#121212] m-0">
    <!-- レビューデータとAboutデータをReactコンポーネントに渡す -->
    <App client:load initialReviews={allReviews} aboutData={aboutData} />
  </body>
</html>