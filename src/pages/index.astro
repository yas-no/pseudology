---
// データ取得関数をインポート
import { fetchReviews, fetchAboutData, fetchAnnualRanks } from '../lib/data_fetcher';
import App from '../components/App.jsx';

// スプレッドシートからレビューデータを取得
const allReviews = await fetchReviews();

// GoogleドキュメントからAboutデータを取得
const aboutData = await fetchAboutData();

// 【新規追加】スプレッドシートから年間ベストデータを取得
const annualRanks = await fetchAnnualRanks();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Pseudology</title>
  </head>
  <body class="bg-[#121212] m-0">
    <!-- レビューデータ、Aboutデータ、年間ベストデータをReactコンポーネントに渡す -->
    <App client:load initialReviews={allReviews} aboutData={aboutData} annualRanks={annualRanks} />
  </body>
</html>